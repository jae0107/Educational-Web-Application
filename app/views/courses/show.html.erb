			</table>

			<h3>Add User</h3>
			<%= render 'course_users/form' %>

			<h3>Import User from File</h3>
			<%= form_tag import_course_users_path(course_id: @course.id), local: true, multipart: true do %>
			  <%= file_field_tag :file %>
			  <%= submit_tag "Upload Users" %>
			<% end %>

			<h2>Saved Quizzes:</h2>
			<table>
				<table border ="1">
				<tr>
					<th>Quiz Name</th>
					<th>Deadline</th>
