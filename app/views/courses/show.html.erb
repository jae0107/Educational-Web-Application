					<th>Individual or Collaborative</th>
					<th>Last Updated</th>
					<th>Action</th>
				</tr>
				<tr><%= render @course.quizzes %></tr>
			</table><br>

			<h3>Add Quiz</h3>
			<%= render 'quizzes/form' %>

